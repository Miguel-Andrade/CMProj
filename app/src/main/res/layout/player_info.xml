<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faces"
    tools:context=".presentation.ui.activities.PlayerInfoActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="188dp"
        android:layout_height="21dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="118dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/kills"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="323dp" />

    <TextView
        android:id="@+id/deaths"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/kills"
        android:layout_alignLeft="@+id/kills"
        android:layout_alignTop="@+id/kills"
        android:layout_marginTop="38dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/infected"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/deaths"
        android:layout_alignLeft="@+id/deaths"
        android:layout_below="@+id/deaths"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/recoveries"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="400dp"
        android:layout_below="@+id/infected"
        android:layout_alignStart="@+id/infected"
        android:layout_alignLeft="@+id/infected"/>

    <TextView
        android:id="@+id/hp"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="426dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/range"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/kills"
        android:layout_alignStart="@+id/hp"
        android:layout_alignLeft="@+id/hp"/>

    <TextView
        android:id="@+id/damage"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/infected"
        android:layout_alignBottom="@+id/infected"
        android:layout_alignStart="@+id/range"
        android:layout_alignLeft="@+id/range"/>

    <TextView
        android:id="@+id/resistence"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/recoveries"
        android:layout_alignStart="@+id/damage"
        android:layout_alignLeft="@+id/damage"/>

    <TextView
        android:id="@+id/defense"
        android:background="@drawable/edittext"
        android:textColor="#080706"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/resistence"
        android:layout_alignLeft="@+id/resistence"
        android:layout_below="@+id/resistence"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/defense"
        android:layout_alignBottom="@+id/defense"
        android:layout_alignEnd="@+id/recoveries"
        android:layout_alignRight="@+id/recoveries"
        android:layout_alignStart="@+id/recoveries"
        android:layout_alignLeft="@+id/recoveries"
        android:background="#d1b280"
        android:text="INFECT" />
</RelativeLayout>
