<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bubonic_1"
    >

    <LinearLayout
        android:id="@+id/disease"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/disease_desc"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disease_name"
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:text="Bubonic Plague"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#080706"
                android:textSize="35dp"
                android:fontFamily="@font/bala"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kills: 100 millions"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Killer: Yersinia pestis
bacterium"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spread by fleas carried by rats"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Victims would die
within 1 to 7 days"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/characteristics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Characteristic"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#080706"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/characs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Damage Bonus"
                android:textColor="#594d46"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
