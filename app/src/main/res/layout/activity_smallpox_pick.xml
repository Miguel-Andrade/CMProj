<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alcides"
    android:orientation="vertical"
    tools:context="com.example.android.checkpoint2.BubonicPick">

    <LinearLayout
        android:id="@+id/disease"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/disease_desc"
            android:layout_width="233dp"
            android:layout_height="385dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Smallpox"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#080706"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kills: 400,000 deaths in Europe yearly during 18th century"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indian population drop from 12 million to 235,000"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc4"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Killer: Variola major and minor"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="80% infected children mortality during 18th century epidemy"
                android:textColor="#594d46"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/characteristics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Characteristic"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#080706"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/characs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Defense Bonus"
                android:textColor="#594d46"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#d1b280"
            android:text="Select" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/disease_icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/bub"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo_pic_bubonic_bird" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo_pic_influenza_wolf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/small"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo_pic_smallpox_alce_goldleaf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>